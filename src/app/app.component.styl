h1
  color: #369
  font-family: Arial, Helvetica, sans-serif
  font-size: 250%
h2, h3
  color: #444
  font-family: Arial, Helvetica, sans-serif
  font-weight: lighter
body
  margin: 2em
body, input[text], button
  color: #888
  font-family: Cambria, Georgia
*
  font-family: Arial, Helvetica, sans-serif
  text-decoration: none
html,body{
  width:100%
  height:100%
}
// pravite
header.main-header
  width:100%
  height:42px
  background: #56d1ff
  position:absolute
  top:0
  left:0
  overflow:hidden
  .logo
    width:200px
    height:42px
    line-height:42px
    color: #ffffff
    font-size:20px
    padding:0 20px
    float:left
  nav
    float:right
    display:inline-block
    padding:0 10px
    overflow:hidden
    a
      display:inline-block
      padding:0 15px
      color:#fff
      text-align:center
      height:42px
      line-height:42px
      &:hover,&.active
        background:#3dbaff
section.main-body
  position:absolute
  top:42px
  left:0
  bottom:0px
  right:0px
